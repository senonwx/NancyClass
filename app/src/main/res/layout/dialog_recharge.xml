<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/recharge_textView1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="是否为"
                android:textColor="@color/txt_black_color"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/recharge_textView1"
                android:gravity="center"
                android:text="某某某"
                android:textColor="@color/txt_red_color"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/recharge_textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/name_tv"
                android:gravity="center"
                android:text="充值金额"
                android:textColor="@color/txt_black_color"
                android:textSize="18sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_lay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/recharge_textView3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="选择充值时间"
                android:textColor="@color/txt_black_color"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/recharge_textView3"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_green_color"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:src="@drawable/click"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_money_lay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/recharge_money_textView3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="输入充值金额"
                android:textColor="@color/txt_black_color"
                android:textSize="15sp"/>

            <EditText
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:id="@+id/money_tv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/recharge_money_textView3"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_green_color"
                android:textSize="15sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_count_lay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/recharge_count_textView3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="输入充值次数"
                android:textColor="@color/txt_black_color"
                android:textSize="15sp"/>

            <EditText
                android:digits="1234567890"
                android:maxLength="2"
                android:id="@+id/count_tv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/recharge_count_textView3"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_green_color"
                android:textSize="15sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_des_lay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/recharge_des_textView3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="备注(非必填) "
                android:textColor="@color/txt_black_color"
                android:textSize="15sp"/>

            <EditText
                android:singleLine="true"
                android:maxLength="20"
                android:id="@+id/des_tv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/recharge_des_textView3"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_green_color"
                android:textSize="15sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/txt_gray_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/btn_bg_blue_selector"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg_red_selector"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>