<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/lay"
    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/title_tv"
        android:text="历史记录"
        android:textColor="@color/tablayout_tv_gray"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间:"
            android:textColor="@color/tablayout_tv_gray"
            android:textSize="13sp" />

        <TextView
            android:layout_below="@+id/text1"
            android:gravity="start"
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-09-19"
            android:textColor="@color/elegant_publish_title"
            android:textSize="16sp" />

        <TextView
            android:layout_marginLeft="150dp"
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值:"
            android:textColor="@color/tablayout_tv_gray"
            android:textSize="13sp" />
        <TextView
            android:layout_alignStart="@+id/text2"
            android:layout_below="@+id/text2"
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200"
            android:textColor="@color/elegant_publish_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type_tv"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textColor="@color/txt_green_color"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/time_tv"
            android:id="@+id/des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:今天天气很好哦"
            android:textColor="@color/elegant_publish_title"
            android:textSize="14sp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/line_bg_color"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>